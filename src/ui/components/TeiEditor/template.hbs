<div class="grid-y grid-frame">
  <div class="cell shrink">
    <AriaMenu @class="menubar">
      <AriaMenuAction @tabindex="0" @label="Undo"><MdiIcon @name="Undo" @class="small"/></AriaMenuAction>
      <AriaMenuAction @label="Redo"><MdiIcon @name="Redo" @class="small"/></AriaMenuAction>
      <AriaDropdownMenu @title="File">
        <AriaMenuAction @action={{action loadFile}}>Load</AriaMenuAction>
        <AriaMenuAction>Save</AriaMenuAction>
      </AriaDropdownMenu>
      <AriaMenuAction>Block</AriaMenuAction>
      <AriaMenuAction>Inline</AriaMenuAction>
    </AriaMenu>
  </div>
  <div class="cell auto cell-block-container">
    <div class="grid-x">
      <div class="small-8 cell cell-block-y editor">
          <div id={{prosemirrorId}}></div>
      </div>
      <div class="small-4 cell cell-block-y sidebar">
        <dl>
          {{#each sidebarConfig key="@index" as |section|}}
            <dt>{{section.title}}</dt>
            <dd>
              <AriaMenu>
                {{#each section.entries key="@index" as |entry index|}}
                  {{#if entry.type.select}}
                    <li class="input">
                      <select role="menuitem" tabindex={{aria-menu-item-tabindex index}} onchange={{action menuAction entry.action 'ev.target.value'}}>
                        {{#each entry.options key="@index" as |value|}}
                          <option value={{value.key}}>{{value.value}}</option>
                        {{/each}}
                      </select>
                    </li>
                  {{/if}}
                {{/each}}
              </AriaMenu>
            </dd>
          {{/each}}
          <dt>Block</dt>
          <dd>
            <select>
              <option>Paragraph</option>
              <option>Heading</option>
            </select>
          </dd>
          <dt>Paragraph</dt>
          <dd>
            <AriaMenu>
              <AriaMenuAction @tabindex="0" @label="Align the paragraph to the left" @action={{action setBlockAttribute "text-align" ""}}><MdiIcon @name="FormatAlignLeft"/></AriaMenuAction>
              <AriaMenuAction @current="true" @label="Align the paragraph to the centre" @action={{action setBlockAttribute "text-align" "center"}}><MdiIcon @name="FormatAlignCenter"/></AriaMenuAction>
              <AriaMenuAction @label="Align the paragraph to the right" @action={{action setBlockAttribute "text-align" "right"}}><MdiIcon @name="FormatAlignRight"/></AriaMenuAction>
              <AriaMenuAction @label="Align the paragraph justified" @action={{action setBlockAttribute "text-align" "justify"}}><MdiIcon @name="FormatAlignJustify"/></AriaMenuAction>
            </AriaMenu>
          </dd>
          <dt>Font Styling</dt>
          <dd>
            <AriaMenu>
              <li class="input">
                <select role="menuitem" tabindex="0">
                  <option>Small Font</option>
                  <option>Normal Font</option>
                  <option>Medium Font</option>
                  <option selected="selected">Large Font</option>
                </select>
              </li>
              <li class="input">
                <select role="menuitem" tabindex="-1">
                  <option>Wide spacing</option>
                </select>
              </li>
            </AriaMenu>
            <AriaMenu>
              <AriaMenuAction @label="Bold font"><MdiIcon @name="FormatBold"/></AriaMenuAction>
              <AriaMenuAction @label="Italic font"><MdiIcon @name="FormatItalic"/></AriaMenuAction>
              <AriaMenuAction @label="Superscript text"><MdiIcon @name="FormatSuperscript"/></AriaMenuAction>
              <AriaMenuAction @label="Subscript text"><MdiIcon @name="FormatSubscript"/></AriaMenuAction>
            </AriaMenu>
          </dd>
          <dt><label>Page break <MdiIcon @name="CheckboxBlankOutline" @class="small"/></label></dt>
          <dd></dd>
          <dt><label>Foreign language <MdiIcon @name="CheckboxBlankOutline" @class="small"/></label></dt>
          <dd></dd>
        </dl>
      </div>
    </div>
  </div>
</div>
